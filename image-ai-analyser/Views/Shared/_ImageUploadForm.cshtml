@using (Html.BeginForm("ProcessImage", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="form">
        <form>
            <h1>Attach image here:</h1>
            <input type="file" name="file" required />
            <input type="submit" value="Scan Image" />
        </form>
    </div>
}
